<% content_for :content do %>

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h2 class="page-header">

          <p id="notice"><%= notice %></p>

          <%= @message.subject %> <small> Message </small>
        </h2>

      </div>

    </div>


    <div id="info_m_h" class="well well-sm">

      <%= link_to(image_tag(@s.avatar.url(:thumb)), user_path(@s)) %>

      <div id="info_m">

          <p id="m_date" class="small text-muted"><i class="fa fa-clock-o"></i> <%= @message.created_at %></p>

          <p class="small"> by <%= @s.name %> </p>

      </div>


    </div>

    <div class="well well-sm">

        <%= simple_format(@message.message) %>

    </div>


    <%= button_to "Reply", new_message_path(:user_id => @message.sender_id, :r_msg_id => @message.id),
                  :class => "btn btn-success" %>

    <br>
    <br>

    <%= link_to 'Back to Inbox', messages_url %>

    <br>
    <br>
    <br>
    <br>
    <br>
